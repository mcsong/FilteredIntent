<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share text/plain to Social networking services or messengers"
        android:id="@+id/main_test01_btn"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share image/* to Cloud services"
        android:id="@+id/main_test02_btn"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/main_test01_btn"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="If filtered app not found, show app in playmarket"
        android:id="@+id/main_test03_btn"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/main_test02_btn"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share text/plain without some apps"
        android:id="@+id/main_test04_btn"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/main_test03_btn"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
